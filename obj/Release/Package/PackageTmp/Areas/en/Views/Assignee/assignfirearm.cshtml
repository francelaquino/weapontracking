@{
    ViewBag.Title = "Accessories";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>


<script type="text/javascript">
    window.setInterval(function () {
        getAllMessages();
    }, 1000);


    $(document).on("keypress", "#txtbatchno", function (e) {
        if (e.which == 13) {
            getAssignee();
        }
    });

    function validate() {
        var items = "";
        $("#items_container").children().each(function (n, i) {
            var id = this.id
           
            items = items + id + ",";
        });
        $("#txtfirearms").val(items);

        if ($("#txtname").val() == "") {
            alert("Please fill assignee information.");
            $("#txtbatchno").focus();
            return false;
        }


        if (items == "") {
            alert("Unable to complete empty firearm(s)");
            return false;
        }

        if (!confirm("Are you sure you want to continue?")) {

            return false;
        }

        isAssigned();
        
    }
    function displayFirearmPictures(path) {
        $('#imagepreview').attr('src', path);
        $('.modal-title').text("Image Preview");
        $('#dialog-modal').modal();
    }


    $(function () {
        // Declare a proxy to reference the hub.
        //var notifications = $.connection.messagesHub;

        ////debugger;
        //// Create a function that the hub can call to broadcast messages.
        //notifications.client.updateMessages = function () {
        //    getAllMessages()

        //};
        //// Start the connection.
        //$.connection.hub.start().done(function () {
        //    //alert("connection started")
        //    getAllMessages();
        //}).fail(function (e) {
        //    alert(e);
        //});
    });


    function getAllMessages() {

        var tbl = $('#items_container');
        $.ajax({
            url: '/en/Firearm/getCheckoutItems',
            contentType: 'application/html ; charset:utf-8',
            type: 'GET',
            dataType: 'html'
        }).success(function (result) {

            tbl.empty().append(result);
        }).error(function () {

        });
    }


    function getAssignee() {


        $.ajax({
            url: '@Url.Action("getAssignee")',
            type: 'POST',
            data: "{id:'" + $("#txtbatchno").val() + "'}",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $('#assigneeImage').attr('src', data.PICTURE);
                $("#txtname").val(data.NAME);
                $("#txtassign_id").val(data.ID);
                $("#txttype").val(data.ASSIGNEETYPE);
                $("#txtcount").val(data.FIREARMS);
                if ($("#txtname").val() == "") {
                    alert("Assignee does not exist!");
                    $("#txtassign_id").val("");
                    $("#txtbatchno").val("");

                }
                $('#txtbatchno').select();
            },
            error: function () {
                alert("Connection Error");
            }
        });
    }


    function isAssigned() {
        
        var items = "";
        $("#items_container").children().each(function (n, i) {
            var id = this.id

            items = items + id + ",";
        });
        if (items != "") {
            $("#txtfirearms").val(items);


            $.ajax({
                url: '@Url.Action("isAssigned")',
                type: 'POST',
                data: "{id:'" + $("#txtfirearms").val() + "'}",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data != "") {
                        alert(data);
                    } else {
                        $("#Form1").submit();
                    }
                },
                error: function () {
                    alert("Connection Error");
                }
            });
        }
    }


    function reScan() {

        $.ajax({
            url: '@Url.Action("reScan")',
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                
            },
            error: function () {
                alert("Information not found.");
            }
        });
    }


</script>


<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">Firearm</a>
        <i class="fa fa-circle"></i>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">

    @if (!string.IsNullOrEmpty(@Session["message"].ToString()))
    {

        <div class="note note-info">
            <p> @Session["message"].ToString()</p>
        </div>
    }
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject  "> Assign Firearm</span>
            </div>
        </div>






        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light ">


            <div class="portlet-body">
                @using (Html.BeginForm("saveassignfirearms", "assignee", FormMethod.Post, new { @class = "form-horizontal", id = "Form1", enctype = "multipart/form-data" }))
                {
                    
                      @Html.TextBox("txtassign_id", "", new { @class = "hidden" })
                      @Html.TextBox("txtfirearms", "", new { @class = "hidden" })
                    <div class="form-body" style="">
                        <div class="col-md-12">

                            <div class="form-group col-md-3">
                                <div class="col-md-12" style="max-height:180px;">
                                        <div class="thumbnail">
                                            <img style="height: 180px; max-height: 180px;" src="/Content/assignee/NoImage.png" id="assigneeImage" style="cursor:hand;cursor:pointer" onclick="displayFirearmPictures('/Content/NoImage.png')" alt="">
                                            
                                        </div>
                                    
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Batch No.</label>
                                <div class="col-md-8">

                                    <div class="input-group">
                                        @Html.TextBox("txtbatchno", "", new { @class = "form-control", @autofocus = "autofocus" })

                                        <span class="input-group-btn">
                                            <button class="btn blue" onclick="getAssignee()" type="button">Search</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Name</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txtname", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            
                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Assignee Type</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txttype", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Assigned Firemarm(s)</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txtcount", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <hr style="width: 100%; color: black; height: 1px; border-bottom: #f7f9fa;" />
                        <div class="row">
                            <div id="items_container" style="min-height: 100px;  ">

                            </div>
                        </div>











                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12 margin-top-10">
                                    <button type="button" onclick="reScan()" class="btn btn-primary">Re-Scan</button>
                                    <button type="button" onclick="validate()" class="btn btn-primary">Assign Firearm</button>
                                    <button type="button" onclick="location.reload()" class="btn btn-default">Reset</button>
                                </div>
                            </div>
                        </div>


                    </div>
                }
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
    <!-- END SAMPLE FORM PORTLET-->
</div>


@{
    Session["message"] = "";
}

