@{
    ViewBag.Title = "Accessories";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>


<script type="text/javascript">

    function displayFirearmPictures(path) {
        $('#imagepreview').attr('src', path);
        $('.modal-title').text("Image Preview");
        $('#dialog-modal').modal();
    }


    $(function () {
        // Declare a proxy to reference the hub.
        var notifications = $.connection.messagesHub;

        //debugger;
        // Create a function that the hub can call to broadcast messages.
        notifications.client.updateMessages = function () {
            getAllMessages()

        };
        // Start the connection.
        $.connection.hub.start().done(function () {
            //alert("connection started")
            getAllMessages();
        }).fail(function (e) {
            alert(e);
        });
    });


    function getAllMessages() {

        var tbl = $('#items_container');
        $.ajax({
            url: '/en/Firearm/getCheckoutItems',
            contentType: 'application/html ; charset:utf-8',
            type: 'GET',
            dataType: 'html'
        }).success(function (result) {

            tbl.empty().append(result);
        }).error(function () {

        });
    }
    
</script>


<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">Firearm</a>
        <i class="fa fa-circle"></i>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner" >

    @if (!string.IsNullOrEmpty(@Session["message"].ToString()))
    {

        <div class="note note-info">
            <p> @Session["message"].ToString()</p>
        </div>
    }
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject  "> Checkout Firearm</span>
            </div>
        </div>






        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light ">


            <div class="portlet-body">
                @using (Html.BeginForm("saveaccessories", "accessories", FormMethod.Post, new { @class = "form-horizontal", id = "Form1", enctype = "multipart/form-data" }))
                {
                    <div class="form-body" style="">
                        <div class="col-md-12">

                            <div class="form-group col-md-3">
                                <div class="col-md-12" style="height:200px;background-color:blue">
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-2 control-label">Batch No.</label>
                                <div class="col-md-9">
                                    @Html.TextBox("txtbatchno", "", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-2 control-label">RFID Card</label>
                                <div class="col-md-9">
                                    @Html.TextBox("txtrfidcard", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-2 control-label">Name</label>
                                <div class="col-md-9">
                                    @Html.TextBox("txtname", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>


                        </div>
                        <hr style="width: 100%; color: black; height: 1px; border-bottom: #f7f9fa;" />
                        <div class="row">
                            <div id="items_container" style="min-height:200px;float:left">

                            </div>
                        </div>














                    </div>
                }
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
    <!-- END SAMPLE FORM PORTLET-->
</div>


@{
    Session["message"] = "";
}
