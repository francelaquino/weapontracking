@model List<FMS.Models.mdlFirearm>
@{
    Layout = null;
}
<link href="~/assets/pages/css/fileinput.css" media="all" rel="stylesheet" type="text/css" />
<script src="~/assets/pages/scripts/fileinput.js" type="text/javascript"></script>
@{
    foreach (var records in Model)
    {

        <div class="col-xs-18 col-sm-6 col-md-3">
            <div class="thumbnail">
                <img style="cursor:hand;cursor:pointer" src="@Url.Content(@records.PATH)" onclick="displayFirearmPictures('@records.PATH')" alt="@records.FILENAME">

                <div class="caption">
                    <a class="btn btn-info btn-xs" href="javascript:void(0)" onclick="removeFirearmPictures('@records.IMG_ID','@records.ID')">Remove</a>
                    @if (@records.DEFPIC.ToUpper() == "DEFAULT")
                    {
                        <span class="btn  btn-xs btn-primary" style="background-color:silver; border:1px solid silver">Default</span>

                    }
                    else
                    {
                        <button class="btn btn-info btn-xs" onclick="removeFirearmPictures('@records.IMG_ID','@records.ID')">Set as Default</button>
                    }
                </div>
            </div>
        </div>
    }
}

<input id="file-0a" class="file" name="files" type="file" multiple>

<script type="text/javascript">

    $("#file-0a").fileinput({
        showUpload: false,
        fileType: "any",
        'allowedFileExtensions': ['jpg', 'png', 'gif', 'jpeg'],
        maxFileSize: 10000,
        maxFilesNum: 10,
        resizeImage: true
    });

</script>
