@model List<FMS.Models.mdlStorage>
@{
    ViewBag.Title = "Storage";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<script src="~/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>
<link href="~/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<script src="~/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>
<link href="~/assets/layouts/layout3/css/themes/default.min.css" rel="stylesheet" type="text/css" id="style_color" />



<script type="text/javascript">

    function vRecords() {

        $('#dataContainer').html("<p>&nbsp;</p><p>&nbsp;</p>");
        $('#dataContainer').append("<p class='loading'><img src='@Url.Content("~/assets/pages/img/loading.gif")' /></p>");
        $('#dataContainer').load('@Url.Action("checkfirearms_list")', { batchno: $("#txtbatchno").val(), status: $("#txtstatus").val(), firearmtype: $("#txtfirearmtype").val() });
    }

    function displayFirearmPictures(path) {
        $('#imagepreview').attr('src', path);
        $('.modal-title').text("Image Preview");
        $('#dialog-modal').modal();
    }

    function details(id) {
        $('#modal_container').html("");
        $('#modal_container').append("<p class='loading'><img src='@Url.Content("~/assets/pages/img/loading.gif")' /></p>");
        $('#modal_container').load('@Url.Content("~/en/firearm/details")', { id: id});
        $('.modal-title').text("Firearm Details");
        $('#dialog-modal').modal();
    }
</script>



<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">Firearm</a>
        <i class="fa fa-circle"></i>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">


    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject  ">Audit Firearm</span>
            </div>
        </div>



        <div class="portlet-body">
            <div class="row">
                <div class="form-group">
                    <label class="col-md-1 control-label">Batch No. </label>
                    <div class="col-md-2">
                        @Html.TextBox("txtbatchno", "", new { @class = "form-control" })
                    </div>
                    <label class="col-md-1 control-label">Status</label>
                    <div class="col-md-2">
                        @Html.DropDownList("txtstatus", (IEnumerable<SelectListItem>)ViewData["status"], new { @class = "form-control" })
                    </div>
                    <label class="col-md-2 control-label">Firearm Type</label>
                    <div class="col-md-2">
                        @Html.DropDownList("txtfirearmtype", (IEnumerable<SelectListItem>)ViewData["firearmtype"], new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn blue" onclick="vRecords();">Search</button>
                    </div>
                </div>

            </div>
            <div class="row margin-bottom-25"><p>&nbsp;</p></div>
            <div id="dataContainer">
            </div>




            <!-- END SAMPLE FORM PORTLET-->
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>



    <script type="text/javascript">

        vRecords();



    </script>


