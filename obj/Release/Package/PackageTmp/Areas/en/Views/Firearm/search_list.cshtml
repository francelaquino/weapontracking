@model List<FMS.Models.mdlFirearm>
@{
    Layout = null;
}
<table class="table table-striped table-bordered table-hover  order-column" id="data_list">
    <thead>
        <tr>
            <th>Firearm Type</th>
            <th> RFID </th>
            <th>Model</th>
            <th>Caliber</th>
            <th>Storage</th>
            <th>Condition</th>
            <th>Status</th>
            <th style="min-width:200px">Action</th>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var records in Model)
            {
                <tr>
                   
                    <td><a href="javascript:void(0)" onclick="displayFirearmPictures('@records.DEFPIC')">@records.FIREARMTYPE </a> </td>
                    <td> @records.RFID </td>
                    <td> @records.MODEL </td>
                    <td> @records.CALIBER </td>
                    <td> @records.STORAGE </td>
                    <td> @records.STATUS </td>
                    <td> @records.CONDITION </td>
                    <td>
                        <a target="_blank" href="javascript:void(0)" onclick="details('@records.ID')" data-toggle="modal" class="btn btn-sm green btn-outline ">
                            <i class="fa fa-edit"></i> Details
                        </a>
                        <a target="_blank" href="firearm/edit/@records.ID/@records.GID" data-toggle="modal" class="btn btn-sm green btn-outline ">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a target="_blank" href="firearm/edit/@records.ID/@records.GID" data-toggle="modal" class="btn btn-sm green btn-outline ">
                            <i class="fa fa-files-o" aria-hidden="true"></i> Copy
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



<script type="text/javascript">



    $(document).ready(function () {
        $('#data_list').dataTable();

    });

</script>


