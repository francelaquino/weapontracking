@{
    ViewBag.Title = "Accessories";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>


<script type="text/javascript">
    window.setInterval(function () {
        getScanItems();
    }, 1000);



    function details(id) {
        $('#modal_container').html("");
        $('#modal_container').append("<p class='loading'><img src='@Url.Content("~/assets/pages/img/loading.gif")' /></p>");
        $('#modal_container').load('@Url.Content("~/en/firearm/details")', { id: id});
        $('.modal-title').text("Firearm Details");
        $('#dialog-modal').modal();
    }

    function validate(id) {
        var items = "";
        $("#items_container").children().each(function (n, i) {
            var id = this.id

            items = items + id + ",";
        });
        $("#txtfirearms").val(items);
        $("#txtcontrol").val(id);
        if ($("#txtdoor").val() == "") {
            alert("Please select door.");
            $("#txtdoor").focus();
            return false;
        }


        if (items == "") {
            alert("Unable to complete empty firearm(s)");
            return false;
        }

        if (!confirm("Are you sure you want to continue?")) {

            return false;
        }

        $("#Form1").submit();

    }
    function displayFirearmPictures(path) {
        $('#imagepreview').attr('src', path);
        $('.modal-title').text("Image Preview");
        $('#dialog-modal').modal();
    }





    function getScanItems() {

        $('#items_container').load('/en/Firearm/getScanFirearms');


    }



    function reScan() {

        $.ajax({
            url: '@Url.Action("../Assignee/reScan")',
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

            },
            error: function () {
                alert("Information not found.");
            }
        });
    }

</script>


<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">Access Control</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="index.html">Weapon Access Door</a>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">

    @if (!string.IsNullOrEmpty(@Session["message"].ToString()))
    {

        <div id="alertMessage" class="note note-info">
            <p> @Session["message"].ToString() <a href="javascript:;" class="remove" onclick="closeMessage()" style="float:right"><i class="fa fa-times" aria-hidden="true"></i></a></p>
        </div>
    }
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject  "> Weapon Access Door</span>
            </div>
        </div>






        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light ">


            <div class="portlet-body">
                @using (Html.BeginForm("saveweaponaccessdoor", "weaponaccess", FormMethod.Post, new { @class = "form-horizontal", id = "Form1", enctype = "multipart/form-data" }))
                {

                    @Html.TextBox("txtfirearms", "", new { @class = "hidden" })
                    @Html.TextBox("txtcontrol", "", new { @class = "hidden" })
                    <div class="form-body" style="">
                        <div class="col-md-12">

                         
                            <div class="form-group">

                                <label class="col-md-1 control-label">Door</label>
                                <div class="col-md-3">
                                    @Html.DropDownList("txtdoor", (IEnumerable<SelectListItem>)ViewData["door"], new { @class = "form-control select2" })
                                </div>

                            </div>
                            
                        </div>
                        <hr style="width: 100%; color: black; height: 1px; border-bottom: #f7f9fa;" />
                        <div class="row">
                            <div id="items_container" style="min-height: 10px;  ">

                            </div>
                        </div>











                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12 margin-top-10">
                                    <button type="button" onclick="reScan()" class="btn btn-primary">Re-Scan</button>
                                    <button type="button" onclick="validate('Allow')" class="btn btn-primary">Allow</button>
                                    <button type="button" onclick="validate('Deny')" class="btn btn-primary">Deny</button>
                                    <button type="button" onclick="location.reload()" class="btn btn-default">Reset</button>
                                </div>
                            </div>
                        </div>


                    </div>
                }
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
    <!-- END SAMPLE FORM PORTLET-->
</div>


@{
    Session["message"] = "";
}

