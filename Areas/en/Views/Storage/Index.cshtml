@model List<FMS.Models.mdlStorage>
@{
    ViewBag.Title = "Storage";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<script src="~/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>
<link href="~/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<script src="~/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/assets/pages/scripts/ui-modals.min.js" type="text/javascript"></script>
<link href="~/assets/layouts/layout3/css/themes/default.min.css" rel="stylesheet" type="text/css" id="style_color" />



<script type="text/javascript">

    function edit(id, gid) {
        $('#modal_container').html("");
        $('#modal_container').append("<p class='loading'><img src='@Url.Content("~/assets/pages/img/loading.gif")' /></p>");
        $('#modal_container').load('@Url.Content("~/en/storage/edit")', { id: id, gid: gid });
        $('.modal-title').text("Edit Storage");
        $('#dialog-modal').modal();
    }

</script>



<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">Storage</a>
        <i class="fa fa-circle"></i>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">


    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject  ">Search Storage</span>
            </div>
        </div>


        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="row">

                    <div class="col-md-12">
                        <div class="btn-group pull-right">
                            <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                Action
                                <i class="fa fa-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="~/en/storage/add">
                                        <i class="fa fa-plus"></i> Add New
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover  order-column" id="data_list">
                <thead>
                    <tr>
                        <th> Storage </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var records in Model)
                        {
                            <tr>
                                <td> @records.STORAGE </td>
                                <td>
                                    <button onclick="edit('@records.ID','@records.GID')" data-toggle="modal" class="btn btn-sm green btn-outline ">
                                        <i class="fa fa-edit"></i> Edit
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
    <!-- END SAMPLE FORM PORTLET-->
</div>



<script type="text/javascript">



    $(document).ready(function () {
        $('#data_list').dataTable();

    });

</script>


