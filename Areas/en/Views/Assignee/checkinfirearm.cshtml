@{
    ViewBag.Title = "Accessories";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>


<script type="text/javascript">
    window.setInterval(function () {
        getScanItems();
    }, 1000);


    


    
    function details(id) {
        $('#modal_container').html("");
        $('#modal_container').append("<p class='loading'><img src='@Url.Content("~/assets/pages/img/loading.gif")' /></p>");
        $('#modal_container').load('@Url.Content("~/en/firearm/details")', { id: id});
        $('.modal-title').text("Firearm Details");
        $('#dialog-modal').modal();
    }


    function validate() {
        var items = "";
        $("#items_container").children().each(function (n, i) {
            var id = this.id

            items = items + id + ",";
        });
        $("#txtfirearms").val(items);

        if ($("#txtname").val() == "") {
            alert("Please fill assignee information.");
            $("#txtbatchno").focus();
            return false;
        }


        if (items == "") {
            alert("Unable to complete empty firearm(s)");
            return false;
        }

        if (!confirm("Are you sure you want to continue?")) {

            return false;
        }

        isAssignedandCheckin();

    }
    function displayFirearmPictures(path) {
        $('#imagepreview').attr('src', path);
        $('.modal-title').text("Image Preview");
        $('#dialog-modal').modal();
    }





    function getScanItems() {

        $('#items_container').load('/en/Firearm/getScanFirearms');


    }


    function getAssignee() {


        $.ajax({
            url: '@Url.Action("getAssignee")',
            type: 'POST',
            data: "{id:'" + $("#txtbatchno").val() + "'}",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $('#assigneeImage').attr('src', data.PICTURE);
                $("#txtname").val(data.NAME);
                $("#txtassign_id").val(data.ID);
                $("#txttype").val(data.ASSIGNEETYPE);
                $("#txtcount").val(data.FIREARMS);
                if ($("#txtname").val() == "") {
                    alert("Assignee does not exist!");
                    $("#txtassign_id").val("");
                    $("#txtbatchno").val("");

                }
                $('#txtbatchno').select();
            },
            error: function () {
                alert("Connection Error");
            }
        });
    }


    function isAssignedandCheckin() {

        var items = "";
        $("#items_container").children().each(function (n, i) {
            var id = this.id

            items = items + id + ",";
        });
        if (items != "") {
            $("#txtfirearms").val(items);


            $.ajax({
                url: '@Url.Action("isAssignedandCheckin")',
                type: 'POST',
                data: "{id:'" + $("#txtassign_id").val() + "',gid:'" + $("#txtfirearms").val() + "'}",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data != "") {
                        alert(data);
                    } else {
                        $("#Form1").submit();
                    }
                },
                error: function () {
                    alert("Connection Error");
                }
            });
        }
    }


    function reScan() {

        $.ajax({
            url: '@Url.Action("reScan")',
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

            },
            error: function () {
                alert("Information not found.");
            }
        });
    }


</script>


<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">Weapon</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="index.html">Checkin Weapon</a>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">

    @if (!string.IsNullOrEmpty(@Session["message"].ToString()))
    {

        <div id="alertMessage" class="note note-info">
            <p> @Session["message"].ToString() <a href="javascript:;" class="remove" onclick="closeMessage()" style="float:right"><i class="fa fa-times" aria-hidden="true"></i></a></p>
        </div>
    }
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject  "> Checkin Weapon</span>
            </div>
        </div>






        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light ">


            <div class="portlet-body">
                @using (Html.BeginForm("savecheckinfirearms", "assignee", FormMethod.Post, new { @class = "form-horizontal", id = "Form1", enctype = "multipart/form-data" }))
                {

                    @Html.TextBox("txtassign_id", "", new { @class = "hidden" })
                    @Html.TextBox("txtfirearms", "", new { @class = "hidden" })
                    <div class="form-body" style="">
                        <div class="col-md-12">

                            <div class="form-group col-md-3">
                                <div class="col-md-12" style="max-height:180px;">
                                    <div class="thumbnail">
                                        <img style="height: 180px; max-height: 180px;" src="/Content/assignee/NoImage.png" id="assigneeImage" style="cursor:hand;cursor:pointer" onclick="displayFirearmPictures('/Content/NoImage.png')" alt="">

                                    </div>

                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Batch No.</label>
                                <div class="col-md-8">

                                    <div class="input-group">
                                        @Html.TextBox("txtbatchno", "", new { @class = "form-control", @autofocus = "autofocus" })

                                        <span class="input-group-btn">
                                            <button class="btn green" onclick="getAssignee()" type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Name</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txtname", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Assignee Type</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txttype", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Assigned Weapon(s)</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txtcount", "", new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <hr style="width: 100%; color: black; height: 1px; border-bottom: #f7f9fa;" />
                        <div class="row">
                            <div id="items_container" style="min-height: 100px;  ">

                            </div>
                        </div>











                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12 margin-top-10">
                                    <button type="button" onclick="reScan()" class="btn btn-primary">Re-Scan</button>
                                    <button type="button" onclick="validate()" class="btn btn-primary">Checkin</button>
                                    <button type="button" onclick="location.reload()" class="btn btn-default">Reset</button>
                                </div>
                            </div>
                        </div>


                    </div>
                }
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
    <!-- END SAMPLE FORM PORTLET-->
</div>


@{
    Session["message"] = "";
}

