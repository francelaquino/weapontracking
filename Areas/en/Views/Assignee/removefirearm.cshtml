@model List<FMS.Models.mdlFirearm>
@{
    ViewBag.Title = "Accessories";
    Layout = "~/Views/Shared/_LayoutEN.cshtml";
}
<script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>


<script type="text/javascript">
   

   

    function displayFirearmPictures(path) {
        $('#imagepreview').attr('src', path);
        $('.modal-title').text("Image Preview");
        $('#dialog-modal').modal();
    }

    
    function details(id) {
        $('#modal_container').html("");
        $('#modal_container').append("<p class='loading'><img src='@Url.Content("~/assets/pages/img/loading.gif")' /></p>");
        $('#modal_container').load('@Url.Content("~/en/firearm/details")', { id: id});
        $('.modal-title').text("Firearm Details");
        $('#dialog-modal').modal();
    }

    function validate() {
        var items = "";

        $('input:checkbox.myFirearms').each(function () {
            if(this.checked){
                var id = this.id;
                items = items + id + ",";
            }
        });

        if (items == "") {
            alert("Please select firearms");
            return false;
        }
        $("#txtfirearms").val(items);

        if (!confirm("Are you sure you want to continue?")) {

            return false;
        }


       


        $("#Form1").submit();
    }

   

</script>


<!-- BEGIN PAGE BREADCRUMBS -->
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">Firearm</a>
        <i class="fa fa-circle"></i>
    </li>
</ul>
<!-- END PAGE BREADCRUMBS -->
<!-- BEGIN PAGE CONTENT INNER -->
<div class="page-content-inner">

    @if (!string.IsNullOrEmpty(@Session["message"].ToString()))
    {

        <div id="alertMessage" class="note note-info">
            <p> @Session["message"].ToString() <a href="javascript:;" class="remove" onclick="closeMessage()" style="float:right"><i class="fa fa-times" aria-hidden="true"></i></a></p>
        </div>
    }
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject  "> Remove Assigned Firearm</span>
            </div>
        </div>






        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light ">


            <div class="portlet-body">
                @using (Html.BeginForm("removeassignfirearms", "assignee", FormMethod.Post, new { @class = "form-horizontal", id = "Form1", enctype = "multipart/form-data" }))
                {

                    @Html.TextBox("txtassign_id", @ViewData["ID"], new { @class = "hidden" })
                    @Html.TextBox("txtassign_gid", @ViewData["GID"], new { @class = "hidden" })
                      @Html.TextBox("txtfirearms", "", new { @class = "hidden" })
                    <div class="form-body" style="">
                        <div class="col-md-12">

                            <div class="form-group col-md-3">
                                <div class="col-md-12" style="max-height:180px;">
                                    <div class="thumbnail">
                                        <img style="height: 180px; max-height: 180px;" src="@ViewData["PICTURE"]" id="assigneeImage" style="cursor:hand;cursor:pointer" onclick="displayFirearmPictures('/Content/NoImage.png')" alt="">

                                    </div>

                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Batch No.</label>
                                <div class="col-md-8">

                                    <div class="input-group">
                                        @Html.TextBox("txtbatchno", @ViewData["BATCHNO"], new { @class = "form-control", @readonly = "readonly" })

                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Name</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txtname", @ViewData["NAME"], new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            
                           

                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Assignee Type</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txttype", @ViewData["ASSIGNEETYPE"], new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group col-md-8">
                                <label class="col-md-4 control-label">Assigned Firemarm(s)</label>
                                <div class="col-md-8">
                                    @Html.TextBox("txtcount", @ViewData["FIREARMS"], new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>


                        </div>
                        <hr style="width: 100%; color: black; height: 1px; border-bottom: #f7f9fa;" />
                        <div class="row">
                            <div id="items_container" style="min-height: 100px;  ">
                                @foreach (var records in Model)
                                {
                                    <div class="col-xs-18 col-sm-6 col-md-3" >

                                        <div class="thumbnail">
                                            <img src="@Url.Content(@records.DEFPIC)" style="cursor:hand;cursor:pointer; " onclick="displayFirearmPictures('@records.DEFPIC')" alt="@records.FIREARMTYPE">
                                                
                                                <label class="checkbox-inline" style="padding:0px;margin-top:5px">
                                                    <input type="checkbox" id="@records.GID" class="myFirearms">@records.FIREARMTYPE 
                                                    

                                                </label>
                                            <button type="button" class="btn-circle btn btn-circle-micro btn-primary" onclick="details('@records.GID')"><i class="fa fa-info"></i></button> 
                                            <h5>
                                                <span class="label label-success"> @records.STATUS </span>
                                            </h5>
</div>
                                    </div>
                                }
                            </div>
                        </div>











                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12 margin-top-10">
                                    <button type="button" onclick="validate()" class="btn btn-primary">Remove Firearm</button>
                                </div>
                            </div>
                        </div>


                    </div>
                }
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
    <!-- END SAMPLE FORM PORTLET-->
</div>


@{
    Session["message"] = "";
}

